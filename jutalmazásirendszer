      <div class="item"><span id="displayUnhealthyHabit"></span>: <input type="number" class="points" id="pointsUnhealthyHabit"></div>
    </div>

    <button id="finalize" disabled>Finalize</button>
  </div>

  <script>
    document.getElementById("toStep2").addEventListener("click", function() {
      const h1 = document.getElementById("habit1").value.trim();
      const h2 = document.getElementById("habit2").value.trim();
      const h3 = document.getElementById("habit3").value.trim();
      const sr1 = document.getElementById("smallReward1").value.trim();
      const sr2 = document.getElementById("smallReward2").value.trim();
      const sr3 = document.getElementById("smallReward3").value.trim();
      const mr1 = document.getElementById("milestoneReward1").value.trim();
      const mr2 = document.getElementById("milestoneReward2").value.trim();
      const mr3 = document.getElementById("milestoneReward3").value.trim();
      const uh = document.getElementById("unhealthyHabit").value.trim();
      if (!h1 || !h2 || !h3 || !sr1 || !sr2 || !sr3 || !mr1 || !mr2 || !mr3 || !uh) {
        alert('Please fill in all fields before proceeding.');
        return;
      }
      document.getElementById("displayHabit1").textContent = h1;
      document.getElementById("displayHabit2").textContent = h2;
      document.getElementById("displayHabit3").textContent = h3;
      document.getElementById("displaySmallReward1").textContent = sr1;
      document.getElementById("displaySmallReward2").textContent = sr2;
      document.getElementById("displaySmallReward3").textContent = sr3;
      document.getElementById("displayMilestoneReward1").textContent = mr1;
      document.getElementById("displayMilestoneReward2").textContent = mr2;
      document.getElementById("displayMilestoneReward3").textContent = mr3;
      document.getElementById("displayUnhealthyHabit").textContent = uh;
      document.getElementById("step1").style.display = 'none';
      document.getElementById("step2").style.display = 'block';
    });

    function checkPoints() {
      const all = Array.from(document.querySelectorAll('.points')).every(i => i.value.trim() !== '');
      document.getElementById('finalize').disabled = !all;
    }
    document.querySelectorAll('.points').forEach(i => i.addEventListener('input', checkPoints));

    document.getElementById('finalize').addEventListener('click', () => {
      html2canvas(document.getElementById('reward-system')).then(canvas => {
        const link = document.createElement('a');
        link.download = 'motiva_reward_system.png';
        link.href = canvas.toDataURL();
        link.click();
      });
    });
  </script>
